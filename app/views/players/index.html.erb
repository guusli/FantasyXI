<h1>Players</h1>

<table class="table table-striped table-bordered table-condensed">
	<thead><tr>
		<th><%= link_to "Namn", :sort => "name" %></th>
		<th><%= link_to "Land", :sort => "team_id" %></th>
		<th><%= link_to "Poäng", :sort => "points" %></th>
		<th><%= link_to "Mål", :sort => "goals" %></th>
		<th><%= link_to "Assist", :sort => "assists" %></th>	
		<th><%= link_to "Gula", :sort => "yellow" %></th>
		<th><%= link_to "Röda", :sort => "red" %></th>		
	</tr></thead>

<% for player in @players %>
	<tbody><tr>
		<td><%= link_to player.name, player_path(player)  %></td>
		<td><%= Team.find(player.team_id).name %></td>
		<td><%= player.points %></td>
		<td><%= player.goals %></td>
		<td><%= player.assists %></td>
		<td><%= player.yellow %></td>
		<td><%= player.red %></td>
	</tr></tbody>
<% end %>

</table>

