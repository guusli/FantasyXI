
<% if current_user %>
<% if @user_team %>
  <h1><%= @user_team.name %></h1>
  <% else %>
	<h1>Inget lag</h1>
<% end %>
	
	<div class="row">
		<div class="span6">
			<div class="btn-group">
  				<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    				Välj formation
    				<span class="caret"></span>
  				</a>
  					<ul class="dropdown-menu">
    					<%= link_to "3-4-3", change_formation_path(:def => 3, :mid => 4, :for => 3),:format => :js, :remote => true %>
    					<li><%= link_to "4-4-2", change_formation_path(:def => 4, :mid => 4, :for => 2),:format => :js, :remote => true %></li>
    					<li><%= link_to "4-3-3", change_formation_path(:def => 4, :mid => 4, :for => 3),:format => :js, :remote => true %></li>
 					 </ul>
			</div>
			<div id="pitch">
			<%= render 'pitch' %>
			</div>
		</div>
		<div class="span6">
			<%= form_tag @user_team, :method => 'get', :id => "players_search" do %>

				<%= hidden_field_tag :direction, params[:direction] %>
				<%= hidden_field_tag :sort, params[:sort] %>
				<div id="filter_settings">
				<label>Sök</label>
				<%= text_field_tag :search, params[:search] %>
				<label>Land</label>
				<%= select("post", "team_select", Team.all.collect {|t| [ t.name, t.id ] }, {:include_blank => 'Alla Länder'}) %>
				</div>
				<div id="players"><%= render 'pickplayers' %>

				</div>
			<% end %>
		</div>	
	</div><!-- /row -->
	<div class="row">
		<div class="span6">
			<a href="#" class="btn btn-large" id="save_button" >Spara lag</a>
		</div>
	</div><!-- /row -->
<% end %>

