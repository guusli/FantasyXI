
<% if current_user %>
<div id="user_team_name">
<% if not current_user.user_teams.empty? %>
  <h1><%= @user_team.name %></h1>
  <% else %>
	<h1><input id="name_input" value="Namn"/> </h1>
<% end %>
</div>
	
	<div class="row">
		<div class="span6">
		      <div id="pitch_alert" class="alert alert-success"><%= flash[:notice] %></div>
			<div class="btn-group">
  				<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    				Välj formation
    				<span class="caret"></span>
  				</a>
  					<ul class="dropdown-menu">
    					<%= link_to "3-4-3", change_formation_path(:def => 3, :mid => 4, :for => 3),:format => :js, :remote => true %>
    					<li><%= link_to "4-4-2", change_formation_path(:def => 4, :mid => 4, :for => 2),:format => :js, :remote => true %></li>
    					<li><%= link_to "4-3-3", change_formation_path(:def => 4, :mid => 3, :for => 3),:format => :js, :remote => true %></li>
 					 </ul>

			</div>
			<div id="pitch">
			<%= render 'pitch' %>
			</div>
		</div>
		<div class="span6">
			<%= form_tag @user_team, :method => 'get', :id => "players_search" do %>

				<%= hidden_field_tag :direction, params[:direction] %>
				<%= hidden_field_tag :sort, params[:sort] %>
				<%= hidden_field_tag :team_id, params[:team_id] %>

				<div id="filter_settings">
				<label>Sök</label>
				<%= text_field_tag :search, params[:search] %>
				<label>Land</label>
				<%= select("post", "team_select", Team.all.collect {|t| [ t.name, t.id ] }, {:include_blank => 'Alla Länder'}) %>
				</div>
				<div id="position_select">
					<label>Position</label>
					<ul>
					<li><%= check_box_tag 'gk_check',"gk_check", true, :id=> 'gk_check', :class => "position_check" %></li>	
					<li><%= check_box_tag 'df_check',"df_check", true, :id=> 'df_check', :class => "position_check" %></li>
					<li><%= check_box_tag 'mf_check',"mf_check", true, :id=> 'mf_check', :class => "position_check" %></li>
					<li><%= check_box_tag 'fw_check',"fw_check", true, :id=> 'fw_check',:class => "position_check" %></li>
					</ul>
				</div>
				<div id="players"><%= render 'pickplayers' %>

				</div>
			<% end %>
		</div>	
	</div><!-- /row -->
	<div class="row">
		<div class="span6">
				<%= form_for(@user_team, :remote => true, :url => save_team_path) do |f| %>
				<input type="text" name="teamplayers" id="teamplayers" value="<%= @user_team.players.to_json %>" />
				<input type="text" name="teamname" id="teamname_hidden" value="<%= @user_team.name %>" />
				<%= f.submit %>
			<% end %>
			<%= link_to "Spara Lag", save_team_path, :remote => true %>
		</div>
	</div><!-- /row -->
<% end %>

