<h1>Leagues</h1>

<%= form_tag leagues_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
    <% j = ActiveSupport::JSON %>
    <% json = j.decode(@page[0]) %>
    <% json['data'].each do |j| %>
    <% if j.length > 1 %>
    <% u = FbGraph::User.fetch(j["id"]) %>
    <%= image_tag u.picture %>
    <% end %>
    <% end %>

    

  </p>


<ul>
	<% @leagues.each do |league|%>
		<li> <%= link_to league.name, league %> </li>		
	<% end %>
</ul>
<% end %>