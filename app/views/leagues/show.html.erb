<h1><%= @league.name %></h1>
<div class="span5">
<% if current_user %>
		<% if @member %>
			<%= link_to "Gå Ur", :controller => :leagues, :action => :leave %>
		<% else %>
			<%= link_to "Gå Med", :controller => :leagues, :action => :join %>
		<% end %>
		<table class="table table-striped table-bordered table-condensed">
			<thead><tr>
				<th></th>
				<th>Namn</th>
				<th>Manager</th>
				<th>Poäng</th>
			</tr></thead >

		<% for member in @members %>
			<tbody><tr>
				<td></td>
				<td><%= UserTeam.where(:user_id => member.id).first.name %></td>
				<td><%= member.name %></td>
				<td><%= UserTeam.where(:user_id => member.id).sum(:points) %></td>
			</tr></tbody>
		<% end %>
<% end %>
</div>