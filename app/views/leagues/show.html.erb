<% unless @members.empty? %>
<h1><%= @members.first.name %></h1>
<div class="span5">
<% if current_user %>
		<% if @member %>
			<%= link_to "Gå Ur", :controller => :leagues, :action => :leave %>
		<% else %>
			<%= link_to "Gå Med", :controller => :leagues, :action => :join %>
		<% end %>
		<table class="table table-striped table-bordered table-condensed">
			<thead><tr>
				<th></th>
				<th>Namn</th>
				<th>Manager</th>
				<th>Poäng</th>
			</tr></thead >

		<% @members.each_with_index do |member, i| %>
			<tbody><tr>
				<td><%= i +1%></td>
				<td><%= member.user_team %></td>
				<td><%= member.name %></td>
				<td><%= member.points %></td>
			</tr></tbody>
		<% end %>
<% end %>
</div>
<% end %>